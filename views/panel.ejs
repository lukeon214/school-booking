<h1>Panel: <%= form.title %></h1>

<p>Public form: 
  <input id="link" value="http://localhost:3333/form/<%= form.id %>" readonly>
  <button onclick="copy()">Copy</button>
</p>

<script>
function copy() {
  const input = document.getElementById('link');
  input.select();
  document.execCommand('copy');
  alert('Copied!');
}
</script>

