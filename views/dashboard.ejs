<div class="grid">
  <% if (!forms.length) { %>
    <p>You haven't created any forms yet.</p>
  <% } else { %>
    <% forms.forEach(form => { %>
      <div class="card">
        <a href="/panel/<%= form.id %>"><strong><%= form.title %></strong></a>
        <% if (form.private) { %>
          <em>Restricted to members only</em>
        <% } else { %>
          <em>Public</em>
        <% } %>
        <form action="/delete/<%= form.id %>" method="POST" onsubmit="return confirm('Delete this form?')">
          <button class="danger">Delete</button>
        </form>
      </div>
    <% }) %>
  <% } %>
</div>